<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context=".Activities.HomeLivroActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginLeft="80dp"
            android:src="@drawable/book_upload"
            android:id="@+id/image_livro_home"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="4dp"
        android:text="Livro Blá Blá Blá"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:id="@+id/nome_livro_home"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="4dp"
                android:text="Autor Blá Blá Blá"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:id="@+id/nome_autor_livro_home"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="4dp"
                android:text="Genero Blá Blá Blá"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:id="@+id/nome_genero_livro_home"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="4dp"
                android:text="0000"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:id="@+id/ano_publicao_livro_home"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:src="@drawable/ic_nao_lido"
                android:id="@+id/image_lido_home"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Não lido"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:id="@+id/lido_home"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Avaliar"
            android:textColor="@android:color/white"
            android:background="@drawable/button_radius"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="130dp"
            android:id="@+id/btn_avaliar_livro_home"
            android:enabled="false"
            android:visibility="invisible"
            android:onClick="avaliarLivro"/>
        <TextView
            android:id="@+id/txt_avalidado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Já avaliado"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>